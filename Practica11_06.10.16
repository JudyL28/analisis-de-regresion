capacidad<-c(4330,5500,5500,4700,5200,5500,4700,5500,5800,5000) #Intependiente(x2)
calidad<-c(2,3,4,3,4,4,4,5,5,5)
precio<-c(190,219,249,249,250,340,289,395,439,525)
mochil<-data.frame(precio,calidad,capacidad)
